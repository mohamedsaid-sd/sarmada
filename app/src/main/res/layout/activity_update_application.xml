<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update_application">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_baseline_update_24" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=" اصبح هذا الاصدار من التطبيق قديم الرجاء تنزيل اخر إصدار من المتجر"
            android:textColor="@color/background"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/background"
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تحديث التطبيق لآخر إصدار"
            android:onClick="fun_update"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>