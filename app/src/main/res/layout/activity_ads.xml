<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buttons"
    tools:context=".ads">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="1350dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ads" />

                <ImageView
                    android:id="@+id/imgBasic"
                    android:layout_width="match_parent"
                    android:layout_height="640dp"
                    android:layout_gravity="center"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/basic" />

                <TextView
                    android:id="@+id/txt_basic_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/aroundgreen"
                    android:fontFamily="@font/jana"
                    android:gravity="center"
                    android:onClick="fun_basic_personal"
                    android:padding="15dp"
                    android:text="إشترك الان اساسي فردي"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/aroundgreen"
                    android:fontFamily="@font/jana"
                    android:gravity="center"
                    android:onClick="fun_basic_family"
                    android:padding="15dp"
                    android:text="إشترك الان اساسي عائلي"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgVip"
                    android:layout_width="match_parent"
                    android:layout_height="640dp"
                    android:layout_gravity="center"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/vip" />

                <TextView
                    android:id="@+id/txt_vip_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/aroundgreen"
                    android:fontFamily="@font/jana"
                    android:gravity="center"
                    android:onClick="fun_vip_presonal"
                    android:padding="15dp"
                    android:text="إشترك الان VIP فردي"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/aroundgreen"
                    android:fontFamily="@font/jana"
                    android:gravity="center"
                    android:onClick="fun_vip_family"
                    android:padding="15dp"
                    android:text="إشترك الان VIP عائلي"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgVipPlus"
                    android:layout_width="match_parent"
                    android:layout_height="640dp"
                    android:layout_gravity="center"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/vipplus" />

                <TextView
                    android:id="@+id/txt_vipplus_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/aroundgreen"
                    android:fontFamily="@font/jana"
                    android:gravity="center"
                    android:onClick="fun_vipplus_personal"
                    android:padding="15dp"
                    android:text="إشترك الان VIP+ فردي"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/aroundgreen"
                    android:fontFamily="@font/jana"
                    android:gravity="center"
                    android:onClick="fun_vipplus_family"
                    android:padding="15dp"
                    android:text="إشترك الان VIP+ عائلي"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="1250dp"
                    android:scaleType="fitStart"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ads" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>