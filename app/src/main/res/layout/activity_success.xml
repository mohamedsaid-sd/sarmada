<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Success">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/liner_success"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/litegray"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_sentiment_very_satisfied_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/green"
                android:fontFamily="@font/jana"
                android:gravity="center"
                android:padding="10dp"
                android:text="لقد تم طلب البطاقة والاشتراك بنجاح سيقوم بالتواصل معك احد موظفين الشركة لاستلام الرسوم وتفعيل البطاقة بياناتك ستبقي معنا لمدة اسبوع سيتم الاحتفاظ بها لحين تفعيل الاشتراك يمكنك المتابعة بالاشتراك المجان الي حين تفعيل اشتراكك , شكرا لاختيارنا"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>